<h1>BURGER TIME</h1>

<h2>FEED THE INNER BEAST</h2>

<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
    <li>
      {{this.name}}

      <form action="/{{this.id}}?_method=PUT" method="post">
        <input type="hidden" name="devoured" value="true">
        <button type="submit">NOM NOM NOM</button>

      </form>
    </li>
    {{/unless}}
  {{/each}}
</ul>
